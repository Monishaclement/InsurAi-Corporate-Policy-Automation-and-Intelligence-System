// src/components/ClaimSimulator.js
import React, { useState } from 'react';
import './ClaimSimulator.css';

const ClaimSimulator = () => {
  const [currentStep, setCurrentStep] = useState(0);
  
  const steps = [
    {
      title: "Report Incident",
      description: "Notify us immediately after the incident occurs",
      duration: "5 minutes",
      icon: "fas fa-phone"
    },
    {
      title: "Document Submission",
      description: "Upload photos and relevant documents",
      duration: "10-15 minutes",
      icon: "fas fa-file-upload"
    },
    {
      title: "Claim Assessment",
      description: "Our experts review your claim",
      duration: "1-2 business days",
      icon: "fas fa-search"
    },
    {
      title: "Approval & Payment",
      description: "Receive approval and payment",
      duration: "3-5 business days",
      icon: "fas fa-check-circle"
    }
  ];

  const nextStep = () => {
    if (currentStep < steps.length - 1) {
      setCurrentStep(currentStep + 1);
    }
  };

  const prevStep = () => {
    if (currentStep > 0) {
      setCurrentStep(currentStep - 1);
    }
  };

  return (
    <div className="claim-simulator">
      <h3>Claim Process Simulator</h3>
      <p>See how easy it is to file a claim with InsureAI</p>
      
      <div className="simulator-container">
        <div className="steps-indicator">
          {steps.map((step, index) => (
            <div 
              key={index}
              className={`step ${index === currentStep ? 'active' : ''} ${index < currentStep ? 'completed' : ''}`}
            >
              <div className="step-icon">
                <i className={step.icon}></i>
              </div>
              <div className="step-title">{step.title}</div>
              {index < currentStep && <i className="fas fa-check completed-check"></i>}
            </div>
          ))}
        </div>
        
        <div className="step-content">
          <h4>{steps[currentStep].title}</h4>
          <p>{steps[currentStep].description}</p>
          <div className="duration">
            <i className="fas fa-clock"></i>
            Estimated time: {steps[currentStep].duration}
          </div>
          
          {currentStep === 1 && (
            <div className="document-upload-demo">
              <div className="upload-box">
                <i className="fas fa-cloud-upload-alt"></i>
                <p>Drag photos or documents here</p>
                <button>Select Files</button>
              </div>
            </div>
          )}
        </div>
        
        <div className="navigation-buttons">
          <button onClick={prevStep} disabled={currentStep === 0}>
            <i className="fas fa-arrow-left"></i> Previous
          </button>
          <button onClick={nextStep} disabled={currentStep === steps.length - 1}>
            Next <i className="fas fa-arrow-right"></i>
          </button>
        </div>
      </div>
    </div>
  );
};

export default ClaimSimulator;